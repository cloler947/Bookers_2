

<%= render 'users/info', user: current_user %>

<%= render 'books/form' %>

<h1>Users</h1>

<% @users.each do |user| %>
  <%= link_to user_path(user) do %>
    <%= attachment_image_tag user, :profile_image, format: 'jpeg', size: "10 x 10" %>
  <% end %>
  <p>
    <%= user.name %>
  </p>
  <%= link_to "show", user_path(user.id) %>
<% end %>