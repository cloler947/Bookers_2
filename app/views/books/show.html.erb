
<div class="col-xs-3">
  <%= render 'users/info', user: @book.user %>
  <%= render 'books/form', book: Book.new %>
</div>

<div class="col-xs-9">
  <h1>Book detail</h1>
  <%= @book.title %>
  <%= @book.body %>


  <% if @book.user == current_user %>
    <%= link_to "Edit", edit_book_path(@book) %>

    <%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" =>  "本当に消しますか?" %>

  <% end %>
</div>